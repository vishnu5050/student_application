<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table class=" table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Current school</th>
      <th>Current level</th>
      <th>Country</th>
      <th>Sat score</th>
      <th>Mentor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.age %></td>
        <td><%= student.gender %></td>
        <td><%= student.dob %></td>
        <td><%= student.current_school %></td>
        <td><%= student.current_level %></td>
        <td><%= student.country %></td>
        <td><%= student.sat_score %></td>
        <td><%= student.mentor_id %></td>
        <td><%= link_to 'Show', student ,class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path, class: 'btn-btn-primary' %>
