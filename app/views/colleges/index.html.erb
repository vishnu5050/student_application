<p id="notice"><%= notice %></p>

<h1>Listing Colleges</h1>

<table class=" table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Country</th>
      <th>Minimum sat score required</th>
      <th>Tution fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colleges.each do |college| %>
      <tr>
        <td><%= college.name %></td>
        <td><%= college.country %></td>
        <td><%= college.min_sat_score %></td>
        <td><%= college.tution_fee %></td>
        <td><%= link_to 'Show', college,class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_college_path(college),class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', college, method: :delete,class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New College', new_college_path , class: 'btn-btn-primary' %>
