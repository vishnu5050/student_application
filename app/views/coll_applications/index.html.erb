<p id="notice"><%= notice %></p>

<h1>College Applications</h1>

<table class=" table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Student</th>
      <th>College</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coll_applications.each do |coll_application| %>
      <tr>
        <td><%= coll_application.student.name %></td> 
        <td><%= coll_application.college.name %></td>
        <td><%= link_to 'Edit', edit_coll_application_path(coll_application),class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', coll_application, method: :delete,class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coll application', new_coll_application_path , class: 'btn-btn-primary' %>
