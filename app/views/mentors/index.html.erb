<p id="notice"><%= notice %></p>

<h1>Listing Mentors</h1>

<table class=" table table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Bio</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mentors.each do |mentor| %>
      <tr>
        <td><%= mentor.name %></td>
        <td><%= mentor.age %></td>
        <td><%= mentor.gender %></td>
        <td><%= mentor.dob %></td>
        <td><%= mentor.bio %></td>
        <td><%= mentor.country %></td>
        <td><%= link_to 'Show', mentor,class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_mentor_path(mentor),class: 'btn btn-primary'  %></td>
        <td><%= link_to 'Destroy', mentor, method: :delete,class: 'btn btn-primary' , data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mentor', new_mentor_path ,class: 'btn-btn-primary' %>
